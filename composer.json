{
    "name": "delolmo/symfony-router",
    "description": "PSR-15 middleware to use the symfony/routing component and store the route attributes in the request.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "server",
        "router",
        "symfony",
        "symfony-routing"
    ],
    "homepage": "https://github.com/delolmo/symfony-router",
    "support": {
        "issues": "https://github.com/delolmo/symfony-router/issues"
    },
    "require": {
        "php": "^8.2",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/config": "^7.0",
        "symfony/polyfill-php83": "^1.27",
        "symfony/polyfill-php84": "^1.27",
        "symfony/psr-http-message-bridge": "^7.0",
        "symfony/routing": "^7.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "captainhook/captainhook": "^5.25",
        "captainhook/plugin-composer": "^5.3",
        "doctrine/coding-standard": "^14.0",
        "equip/dispatch": "^2.0",
        "ergebnis/composer-normalize": "^2.47",
        "infection/infection": "^0.31",
        "laminas/laminas-diactoros": "^3.3",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.4",
        "ramsey/conventional-commits": "^1.6",
        "rector/rector": "^2.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^4.0",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "DelOlmo\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DelOlmo\\Middleware\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "dev:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "php -d memory_limit=2G vendor/bin/phpunit --coverage-html var/coverage"
        ],
        "dev:fix": [
            "@putenv XDEBUG_MODE=off",
            "rector process",
            "@dev:phpcbf"
        ],
        "dev:infection": [
            "@putenv XDEBUG_MODE=coverage",
            "php -d memory_limit=2G -d opcache.enable_cli=1 vendor/bin/infection --threads=16 --min-msi=98"
        ],
        "dev:lint": "parallel-lint ./src",
        "dev:phpcbf": "phpcbf",
        "dev:phpcs": "phpcs -s --colors",
        "dev:phpstan": "phpstan analyse --xdebug --memory-limit 2G",
        "dev:phpunit": "php vendor/bin/phpunit --configuration phpunit.xml.dist --no-coverage",
        "dev:psalm": "psalm --config psalm.xml",
        "dev:rector": "rector process --dry-run",
        "dev:test": [
            "@putenv XDEBUG_MODE=off",
            "@dev:lint",
            "@dev:phpcs",
            "@dev:rector",
            "@dev:phpstan",
            "@dev:psalm",
            "@dev:phpunit"
        ]
    }
}
